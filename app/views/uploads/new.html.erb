<section class="px-4 py-16 flex flex-col gap-8 mx-auto max-w-screen-lg">
  <div id="browser-upload">
    <h1 class="font-semibold text-4xl mb-8">Upload file</h1>

    <%= render "form", upload: @upload %>

    <div>
    </div>

    <div class="flex my-2 text-3xl font-semibold items-center text-gray-800">
      <div class="flex-grow border-t h-px mr-3"></div>
      OR
      <div class="flex-grow border-t h-px ml-3"></div>
    </div>
  </div>
  <div class="cli-upload">
    <h1 class="font-semibold text-4xl mb-8">Upload API</h1>
    <p class="mb-8">You can upload and download files using Data Dead Drop's API. Use any of
      these supported command line clients.
    </p>

    <div>
      <div class="sm:hidden mt-8">
        <label for="Tab" class="sr-only">Tab</label>

        <select id="Tab" class="w-full rounded-md border-gray-200">
          <option>Curl</option>
          <option>Wget</option>
          <option>HTTPie</option>
          <option select>Notifications</option>
        </select>
      </div>

      <div class="hidden sm:block mt-8">
        <div
          class=""
          data-controller="tabs"
          data-tabs-index-value="0"
          data-tabs-active-tab-class="border-b-2 border-gray-800 text-gray-800"
        >
          <nav class="-mb-px flex gap-6 border-b border-gray-200">
            <a
              href="#curl"
              data-tabs-target="tab"
              data-action="click->tabs#change"
              class="
                inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                text-gray-500 hover:border-gray-300 hover:text-gray-700
              "
            >
              Curl
            </a>

            <a
              href="#httpie"
              data-tabs-target="tab"
              data-action="click->tabs#change"
              class="
                inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                text-gray-500 hover:border-gray-300 hover:text-gray-700
              "
            >
              HTTPie
            </a>

            <a
              href="#wget"
              data-tabs-target="tab"
              data-action="click->tabs#change"
              class="
                inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                text-gray-500 hover:border-gray-300 hover:text-gray-700
              "
            >
              Wget
            </a>

          </nav>

          <div id="curl" class="hidden py-4" data-tabs-target="panel">
            <%= render "components/code" do %>
              curl https://datadeaddrop.com/upload \<br>
              &nbsp;&nbsp;-X POST -H "Accept: application/json" \<br>
              &nbsp;&nbsp;-F "upload[data]=@file.txt" -F "upload[expiry]=10" -F
              "upload[uses]=3"
            <% end %>
          </div>

          <div id="httpie" class="hidden py-4" data-tabs-target="panel">
            <%= render "components/code" do %>
              curl https://datadeaddrop.com/upload \<br>
              &nbsp;&nbsp;-X POST -H "Accept: application/json" \<br>
              &nbsp;&nbsp;-F "upload[data]=@file.txt" -F "upload[expiry]=10" -F
              "upload[uses]=3"
            <% end %>
          </div>

          <div class="hidden py-4" data-tabs-target="panel">
            <%= render "components/code" do %>
              curl https://datadeaddrop.com/upload \<br>
              &nbsp;&nbsp;-X POST -H "Accept: application/json" \<br>
              &nbsp;&nbsp;-F "upload[data]=@file.txt" -F "upload[expiry]=10" -F
              "upload[uses]=3"
            <% end %>
          </div>
        </div></div>

      <div class="py-8">
        To interact with the API you can expect these responses.
        <div class="sm:hidden mt-8">
          <label for="Tab" class="sr-only">Tab</label>

          <select id="Tab" class="w-full rounded-md border-gray-200">
            <option select>Request</option>
            <option>Success</option>
            <option>Error</option>
          </select>
        </div>

        <div class="hidden sm:block mt-8">
          <div
            class=""
            data-controller="tabs"
            data-tabs-index-value="0"
            data-tabs-active-tab-class="border-b-2 border-gray-800 text-gray-800"
          >
            <nav class="-mb-px flex gap-6 border-b border-gray-200">
              <a
                href="#curl"
                data-tabs-target="tab"
                data-action="click->tabs#change"
                class="
                  inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                  text-gray-500 hover:border-gray-300 hover:text-gray-700
                "
              >
                Request
              </a>

              <a
                href="#httpie"
                data-tabs-target="tab"
                data-action="click->tabs#change"
                class="
                  inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                  text-gray-500 hover:border-gray-300 hover:text-gray-700
                "
              >
                Success
              </a>

              <a
                href="#wget"
                data-tabs-target="tab"
                data-action="click->tabs#change"
                class="
                  inline-flex shrink-0 items-center gap-2 px-1 pb-4 text-sm font-medium
                  text-gray-500 hover:border-gray-300 hover:text-gray-700
                "
              >
                Error
              </a>

            </nav>

            <div id="request" class="hidden py-4" data-tabs-target="panel">
              <%= render "components/code" do %>
                {
                <br>
                &nbsp;&nbsp;"data":"file.txt",<br>
                &nbsp;&nbsp;"expiry":10,<br>
                &nbsp;&nbsp;"uses":1
                <br>
                }
              <% end %>

            </div>

            <div id="response" class="hidden py-4" data-tabs-target="panel">
              <%= render "components/code" do %>
                {<br>
                &nbsp;&nbsp;"name":"file.txt"<br>
                &nbsp;&nbsp;"key":"your-secret-key",<br>
                &nbsp;&nbsp;"url":"http://datadeaddrop/d/your-secret-key",<br>
                &nbsp;&nbsp;"expiry":"2024-12-24T18:10:00.000Z",<br>
                &nbsp;&nbsp;"uses":3,<br>
                &nbsp;&nbsp;"created_at":"2023-12-24T18:00:00.000Z",<br>
                }
              <% end %>
            </div>

            <div id="error" class="hidden py-4" data-tabs-target="panel">
              <%= render "components/code" do %>
                {<br>
                &nbsp;&nbsp;"uses":["must be less than or equal to five"]<br>
                &nbsp;&nbsp;"expiry":["must be less than an hour"]<br>
                }
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
